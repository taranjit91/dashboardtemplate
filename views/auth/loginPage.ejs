<div class="row  ">
    <div class="col-md-offset-4 col-md-4  col-sm-offset-4 col-sm-4 loginBg Absolute-Center ">
        <h2>Please Login</h2>
        <form method="post">
            <fieldset class="form-group">
                <label>Email Address:</label>
                <input type="text" class="form-control" name="email" required autofocus/>
            </fieldset>
            <fieldset class="form-group">
                <label>Password:</label>
                <input type="password" class="form-control" name="password" required/><br> or <a href="users/register">Register</a>
            </fieldset>
            <fieldset class="form-group text-right">
                <input type="submit" class="btn loginBtn" value="Log In" />
                <a href="/">
                    <input type="button" class="btn btn-warning" value="Cancel" />
                </a>
            </fieldset>

            <% if(title == "login failed"){ %>
                <div class="alert alert-danger alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
                    <strong>Error!</strong>
                    <%= message%>
                </div>
                <% } %>
        </form>
    </div>
</div>